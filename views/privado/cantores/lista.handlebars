<div>
    <h2>Lista de Cantores</h2>
    <div class="d-flex justify-content-between align-items-center mx-3">
        <a href="/privado/cantores/novo">
            <button type="button" class="btn btn-primary">Novo</button>
        </a>
        {{#if total}}
            <div>
                Total de Registros: <strong> {{total}}</strong> 
            </div>
        {{/if}}
    </div>
    <hr style="margin: 10px;">
    <ul class="list-group mx-5 d-flex">
        {{#each dados}}
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center m-0">
                <a href="./cantores/find/{{id}}" class="nav-link active flex-fill p-2">
                    {{nome}}
                </a>
                <div>
                    <a href="./cantores/editar/{{id}}" class="btn btn-success ms-1 btn-form">Editar</a>
                    <a href="./cantores/delete/{{id}}" class="btn btn-danger ms-1 btn-form">Deletar</a>
                </div>
            </li>
        {{else}}
            <p>{{msg}}</p>
        {{/each}}
    </ul>
</div>





